<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:fontFamily="@font/museomoderno_black"
        android:text="Terraforming Mars Champions Cup"
        android:textColor="@color/whiteTxt"
        android:layout_marginTop="20dp"
        android:textSize="35dp"
        android:lineSpacingMultiplier="0.7" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="408dp"
        android:layout_height="230dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/mars"
        tools:layout_editor_absoluteY="110dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_above="@+id/launch"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:text="Wydarzenie o tytule 'Terraforming Mars Champions Cup' jest wydarzeniem odbywającym się raz do roku. Uczestnicy mogą wziąć udział w turnieju, walcząc między sobą o zdobycie pucharu najlepszego gracza. Popularnej gry planszowej o nazwie ' Terraformacja Marsa'"
        android:textColor="@color/whiteTxt"
        android:textSize="20dp" />

    <Button
        android:id="@+id/launch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/kalendarz"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_background"
        android:drawableRight="@drawable/ic_baseline_location"
        android:fontFamily="@font/museomoderno_regular"
        android:onClick="onClick"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Sprawdź na mapie"
        android:textColor="@color/text_btn"
        android:textColorHint="@color/whiteTxt"
        android:textSize="16dp" />

    <Button
        android:id="@+id/kalendarz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/museomoderno_regular"
        android:onClick="Kalendarz"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Dodaj do kalendarza "
        android:textColor="@color/text_btn"
        android:textSize="16dp"
        android:drawableRight="@drawable/ic_baseline_calendar"
        />





</RelativeLayout>