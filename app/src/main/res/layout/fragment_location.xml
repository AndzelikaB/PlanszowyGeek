<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    >

    <ImageView
        android:id="@+id/kiermasz"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3"
        android:layout_marginStart="31dp"
        android:layout_marginTop="11dp"
        app:srcCompat="@drawable/kiermasz_gier_kwadrat" />

    <ImageView
        android:id="@+id/spodek"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3"
        android:layout_centerVertical="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="208dp"
        app:srcCompat="@drawable/spodek_kwadrat" />

    <ImageView
        android:id="@+id/turniej"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3"
        android:layout_centerVertical="true"
        android:layout_marginStart="222dp"
        android:layout_marginTop="208dp"
        app:srcCompat="@drawable/mars" />

    <ImageView
        android:id="@+id/cos"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3"
        android:layout_marginStart="222dp"
        android:layout_marginTop="406dp"
        app:srcCompat="@drawable/wroclawfest" />

    <ImageView
        android:id="@+id/cos2"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3"
        android:layout_marginStart="31dp"
        android:layout_marginTop="406dp"
        app:srcCompat="@drawable/grysmok" />

    <ImageView
        android:id="@+id/pionek"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView3"

        android:layout_marginEnd="-1dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="11dp"
        android:layout_toEndOf="@+id/kiermasz"
        app:srcCompat="@drawable/pionek_kwadrat" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/museomoderno_black"
        android:gravity="center"
        android:text="Wydarzenia"
        android:textColor="@color/whiteTxt"
        android:textSize="35dp" />




</RelativeLayout>